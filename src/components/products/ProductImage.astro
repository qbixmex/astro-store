---
type Props = {
  src: string;
  alt: string;
  width?: string | number;
  height?: string | number;
  class?: string;
  style?: astroHTML.JSX.CSSProperties;
};

const {
  src,
  alt,
  class: cssClasses,
  style,
  width,
  height,
} = Astro.props;

const currentImage = src.startsWith("http")
  ? src
  : `${import.meta.env.PUBLIC_URL}/assets/products/${src}`;
---

<img
  src={currentImage}
  alt={alt}
  class={cssClasses}
  style={style}
  width={width}
  height={height}
/>
