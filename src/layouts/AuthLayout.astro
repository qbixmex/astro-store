---
import { Image } from 'astro:assets';
import laptopDesktop from "@/assets/images/laptop-desktop.jpg";
import "@/styles/globals.css";

type Props = {
	title: string;
	description?: string;
	robots?:
		| "index, follow"
		| "noindex, follow"
		| "index, nofollow"
		| "noindex, nofollow"
	;
};

const {
	title,
	description = '',
	robots = 'index, follow',
} = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="robots" content={robots} />
	</head>
	<body class="bg-slate-800">
		<main>
			<div id="mainWrapper">
        <Image
          src={laptopDesktop}
          alt="A bird."
          class="w-full h-full absolute inset-0 z-0 object-cover"
        />
        <div id="background"></div>
        <section id="content">
          <div id="heroContainer">
            <div id="heroWrapper">
              <!-- <img src="" class="mb-3"> -->
              <h1>Hi ! Welcome Back</h1>
              <p>
                Please provide your credentials in order to access<br />
                to the admin panel
                <br />or
                <a class="registerLink" href="/register">create a new account</a>.
              </p>
            </div>
          </div>
          <slot />
        </section>
      </div>
		</main>
	</body>
</html>

<style>
  #mainWrapper {
    @apply bg-no-repeat bg-cover bg-center relative;
  }
  #background {
    @apply absolute bg-gradient-to-b from-slate-900 to-slate-500 opacity-75 inset-0 z-0;
  }
  #content {
    @apply min-h-screen sm:flex sm:flex-row mx-0 justify-center;
  }
  #heroContainer {
    @apply flex flex-col self-center p-10 sm:max-w-5xl xl:max-w-2xl  z-10;
  }
  #heroWrapper {
    @apply self-start hidden lg:flex flex-col  text-white;
  }
  #heroWrapper {
    & h1 {
      @apply mb-3 font-bold text-5xl;
    }
    & p {
      @apply pr-3;
    }
  }
  .registerLink {
    @apply hover:text-slate-200 underline transition-colors ease-in-out duration-300;
  }
</style>